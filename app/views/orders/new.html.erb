<html lang="en">
<head>
    <title>Welcome to E2Delivery</title>
</head>

<body>

    <%= render :partial => 'shared/navigation', :locals => {:page => "new_orders"} %>


    <div class="container">
        <div class="starter-template">
            <%= form_for(:orders, :html => {:class => 'form-horizontal'}, :url => orders_path) do |f| %>
                <!-- Company information panel-->
                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <i class="icon-calendar"></i>
                        <h3 class="panel-title">Company Information</h3>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <%= f.label :company_name, "Company Name*", class: "col-sm-1 col-form-label" %>
                            <div class="col-sm-5">
                                <%= f.text_field :company_name, class:"form-control", placeholder:"Enter company information" %>
                            </div>

                            <%= f.label :account_num, "Account Number", class: "col-sm-1 col-form-label" %>
                            <div class="col-sm-5">
                                <%= f.text_field :account_num, class:"form-control", placeholder:"Enter account number" %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= f.label :first_name, "First Name*", class: "col-sm-1 col-form-label" %>
                            <div class="col-sm-5">
                                <%= f.text_field :first_name, class:"form-control", placeholder:"Enter first name" %>
                            </div>

                            <%= f.label :last_name, "Last Name*", class: "col-sm-1 col-form-label" %>
                            <div class="col-sm-5">
                                <%= f.text_field :last_name, class:"form-control", placeholder:"Enter last name" %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= f.label :phone, "Phone*", class: "col-sm-1 col-form-label" %>
                            <div class="col-sm-5">
                                <%= f.text_field :phone, class:"form-control", placeholder:"Enter phone number" %>
                            </div>

                            <%= f.label :company_email, "Email Id*", class: "col-sm-1 col-form-label" %>
                            <div class="col-sm-5">
                                <%= f.text_field :company_email, class:"form-control", placeholder:"Enter email id" %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Company Information Panel-->


                <!-- Start order pickup panel-->

                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <i class="icon-calendar"></i>
                        <h3 class="panel-title">Pick up details</h3>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label for="pickup_address" class="col-sm-1 col-form-label">Address*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="pickup_address" placeholder="Enter pick up address">
                            </div>

                            <label for="pickup_company" class="col-sm-1 col-form-label">Company</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="pickup_company" placeholder="Enter pick up company">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pickup_city" class="col-sm-1 col-form-label">City*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="pickup_city" placeholder="Enter pick up city">
                            </div>

                            <label for="pickup_contact" class="col-sm-1 col-form-label">Contact*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="pickup_contact" placeholder="Enter pick up contact">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pickup_zip" class="col-sm-1 col-form-label">Zip*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="pickup_zip" placeholder="Enter pick up zip code">
                            </div>

                            <label for="pickup_phone" class="col-sm-1 col-form-label">Phone*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="pickup_phone" placeholder="Enter pick up phone">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pickup_date" class="col-sm-1 col-form-label">Date*</label>
                            <div class="col-sm-5">
                                <input type="date" class="form-control" id="pickup_date" placeholder="Enter pick up date">
                            </div>

                            <label for="pickup_time" class="col-sm-1 col-form-label">Time*</label>
                            <div class="col-sm-5">
                                <input type="time" class="form-control" id="pickup_time" placeholder="Enter pick up time">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- End order pickup panel-->

                <!-- Start order delivery panel-->

                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <i class="icon-calendar"></i>
                        <h3 class="panel-title">Delivery details</h3>
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label for="delivery_address" class="col-sm-1 col-form-label">Address*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="delivery_address" placeholder="Enter delivery address">
                            </div>

                            <label for="delivery_company" class="col-sm-1 col-form-label">Company</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="delivery_company" placeholder="Enter delivery company">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="delivery_city" class="col-sm-1 col-form-label">City*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="delivery_city" placeholder="Enter delivery city">
                            </div>

                            <label for="delivery_contact" class="col-sm-1 col-form-label">Contact*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="delivery_contact" placeholder="Enter delivery contact">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="delivery_zip" class="col-sm-1 col-form-label">Zip*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="delivery_zip" placeholder="Enter delivery zip code">
                            </div>

                            <label for="delivery_phone" class="col-sm-1 col-form-label">Phone*</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="delivery_phone" placeholder="Enter delivery phone">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="delivery_date" class="col-sm-1 col-form-label">Date*</label>
                            <div class="col-sm-5">
                                <input type="date" class="form-control" id="delivery_date" placeholder="Enter delivery date">
                            </div>

                            <label for="delivery_time" class="col-sm-1 col-form-label">Time*</label>
                            <div class="col-sm-5">
                                <input type="time" class="form-control" id="delivery_time" placeholder="Enter delivery time">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- End order delivery panel-->
                <button type="submit" class="btn btn-default">Submit Order</button>
            <% end %>

            <!--</form>-->
            <!-- End Creation of form-->
        </div>
    </div><!-- /.container -->

    <%#<form>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    %>

</body>
</html>